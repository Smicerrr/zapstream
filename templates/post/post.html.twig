{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<section id="body_create_publication">
    <div class="big_box_form_create_publication">
            <div class="button_gamename_create_publication button_category_create"></div>
    <div class="box_createform_bc_grey">
        <div class="box_button_create_publication">
                <p>Cr√©er une publication</p>
        </div>
                <div class="view_createpost_avatar">
                    {%for streamer in streamers%}
