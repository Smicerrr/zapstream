{% extends 'admin.html.twig' %}

{% block title %}ZapStream Admin - Listing Games{% endblock %}

{% block body %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Jeux</h6>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
            </tfoot>
            {% for game in games %}
                <tbody>
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.title }}</td>
                    <td>{{ game.description }}</td>
                    <td>{{ game.image }}</td>
                    <td>{{ game.createdAt|date('d-m-Y') }}</td>
                    <td><a href="{{ path('app_one_game', {id: game.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                        <a href="{{ path('app_admin_game_edit', {'id': game.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href=""><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>

 {% endblock %}