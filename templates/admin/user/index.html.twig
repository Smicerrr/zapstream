{% extends 'admin.html.twig' %}

{% block title %}ZapStream Admin - Listing Users{% endblock %}

{% block body %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Users</h6>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>ID</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Password</th>
                <th>Token</th>
                <th>Description</th>
                <th>Twitch Link</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>ID</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Password</th>
                <th>Token</th>
                <th>Description</th>
                <th>Twitch Link</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </tfoot>
            {% for user in users %}
            <tbody>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.token }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.twitchLink }}</td>
                <td>{{ user.createdAt|date('d-m-Y') }}</td>
                <td><a href="{{ path('app_one_user', {id: user.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                    <a href=""><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>

{% endblock %}
