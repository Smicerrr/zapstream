{% extends 'admin.html.twig' %}

{% block title %}ZapStream Admin - Listing Posts{% endblock %}

{% block body %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Posts</h6>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Jeu</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Jeu</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
            </tfoot>
            {% for post in posts %}
                <tbody>
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.game.title }}</td>
                    <td>{{ post.createdAt|date('d-m-Y') }}</td>
                    <td><a href="{{ path('app_one_post', {id: post.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                        <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href=""><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>

{% endblock %}
