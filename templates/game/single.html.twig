{% extends 'base.html.twig' %}

{% block title %}ZAP Stream - Game{% endblock %}

{% block body %}
    <div class="body_single_game">
        <div class="body_single_game_top">
            <div class="body_single_game_top_left">
                <img src="{{ asset('upload/game/' ~ game.image) }}">
            </div>
            <div class="body_single_game_top_right">
                <div class="body_single_game_top_right_title">
                    <h1>{{ game.title }}</h1>
                </div>
                <div class="body_single_game_top_right_description">
                    <h4>{{ game.description }}</h4>
                </div>
            </div>
        </div>

        <div class="body_single_game_bottom">
            <div class="body_single_game_bottom_left">
                <h1>Publications</h1>
            </div>
            <div class="body_single_game_bottom_right">
                <div class="body_single_game_bottom_right_top">
                    {% if app.user %}
                        <li><a href="{{ path("app_post") }}"><h4>Créer une publication</h4></a></li>
                    {% else %}
                        <li><a href="{{ path("app_login") }}"><h4>Créer une publication</h4></a></li>
                    {% endif %}
                </div>
                <div class="body_single_game_bottom_right_bottom">
                    <li><a href="{{ path("app_post") }}"><h4>Voir les publication</h4></a></li>

                </div>
            </div>
        </div>
    </div>
{% endblock %}