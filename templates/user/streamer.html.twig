{% extends 'base.html.twig' %}

{% block title %} ZapStream - Streamers {% endblock %}

{% block body %}

    <div class="wrap">
        <section id="streamer">
            <div id="heading-streamer">
                <h1>STREAMERS</h1>
                <p><span>recent<i class="fa-solid fa-caret-down"></i></span><span>followers<i class="fa-solid fa-caret-down"></i></span></p>
            </div>

            <div id="all-streamers">
                {% for streamer in streamers %}
                    <div class="row-streamer">
                            <div class="one-streamer shadow">
                                <a href="{{ path('app_one_streamer', {id: streamer.id }) }}">
                                {% if streamer.avatar %}
                                    <img src="{{ asset('upload/users/' ~ streamer.avatar) }}">
                                {% endif %}
                                    <p> {{ streamer.pseudo }} - {{ streamer.followers }} followers</p>
                                </a>
                            </div>

                    </div>
                {% endfor %}
            </div>
        </section>
    </div>

{% endblock %}
