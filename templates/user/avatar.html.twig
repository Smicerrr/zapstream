    {%for streamer in streamers%}
    {% if streamer.avatar %}
    <img src="{{ asset('upload/users/' ~ streamer.avatar) }}">
    {% endif %}
    {%endfor %}
</div>
</div>

<div class="box_add_avatar">
                <div class="add_Avatar">
                    {{ form_start(addAvatar) }}
                            <div class="btn_add_avatar">
